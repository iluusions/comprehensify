{
  "manifest_version": 3,
  "name": "comprehensify",
  "description": "Enhance your browser experience with Comprehensify! An app that personalizes webpage text to match the reader's comprehension level!",
  "version": "1.0.0",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "192": "icons/192.png",
    "512": "icons/512.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "oauth2": {
    "client_id": "46137983121-901uhunn5eq87841f68ummortte87loi.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
